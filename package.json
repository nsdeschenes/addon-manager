{
  "name": "addon-manager",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "license": "MIT",
  "version": "0.0.2",
  "bin": {
    "addon-manager": "./src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "test": "bun test",
    "lint": "bun run lint:ts && bun run lint:prettier",
    "lint:ts": "eslint",
    "lint:prettier": "prettier \"**/*{.ts}\" --check --log-level=error --experimental-cli --no-cache",
    "fix": "bun run fix:lint && bun run fix:format",
    "fix:lint": "eslint --fix",
    "fix:format": "prettier \"**/*{.ts}\" --write --log-level=error --experimental-cli --no-cache",
    "build:all": "bun run build:linux-x64 && bun run build:darwin-x64 && bun run build:darwin-arm64 && bun run build:windows-x64",
    "build:linux-x64": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile dist/addon-manager-linux-x64",
    "build:darwin-x64": "bun build src/index.ts --compile --target=bun-darwin-x64 --outfile dist/addon-manager-darwin-x64",
    "build:darwin-arm64": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile dist/addon-manager-darwin-arm64",
    "build:windows-x64": "bun build src/index.ts --compile --target=bun-windows-x64 --outfile dist/addon-manager-windows-x64.exe"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@prettier/plugin-oxc": "^0.1.3",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.52.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0-alpha.9",
    "@sentry/bun": "^10.38.0",
    "zod": "^4.3.5"
  }
}
